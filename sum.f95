program sum !Opening the program
real :: answer,x,y
print *, 'Enter 2 numbers' !Output
read *, x !Assigning x variable a value from input
read *, y !Assigning y variable a value from input
answer=x+y !Calculation
print *, 'Answer equals ', answer !Outputting answer's value
end program sum !Ending the program

